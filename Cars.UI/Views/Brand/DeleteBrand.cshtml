@model Cars.Application.Contracts.DTOs.BrandGetDto;

@{
		ViewData["Title"] = "DeleteBrand";
}
<h2>@ViewData["Title"]</h2> 
<br/>

<h3>Are you sure you want to delete this brand?</h3>
<br/>
<div>
    <h4>Brand Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dd class=" col-sm-10">@Model.BrandName</dd>
        <dd class=" col-sm-10">@Model.Country</dd>        
    </dl>
</div>

<form asp-action="DeleteBrand" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" /> || 
        <a asp-action="GetAllPersons" class=" btn btn-secondary">Back to List</a>
    </div>
</form>
<br />
<p> 
    <a asp-action="Index" class="btn btn-secondary">Back To homepage</a>
</p>