@model Cars.Application.Contracts.DTOs.CarGetDto;
@{
		ViewData["Title"] = "Delete Car";
}
<h2>@ViewData["Title"]</h2>
<br />
<h3>Are you sure you want to delete this Car?</h3>
<br />
<div>
    <h4>Car Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dd class=" col-sm-10">@Model.CarModel</dd>
        <dd class=" col-sm-10">@Model.Color</dd>
        <dd class=" col-sm-10">@Model.TyreCount</dd>
        <dd class=" col-sm-10">@Model.NumberPlate</dd>
        <dd class=" col-sm-10">@Model.BrandId</dd>
    </dl>
</div>

<form asp-action="DeleteCar" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" /> ||
        <a asp-action="GetAllCars" class=" btn btn-secondary">Back to List</a>
    </div>
</form>
<br />
<p>
    <a asp-controller="Brand" asp-action="Index" class="btn btn-secondary">Back To homepage</a>
</p>
